# Mount name (defaults to environment name if not provided)
variable "mount_name" {
  description = "Name for the KV v2 mount (defaults to environment name)"
  type        = string
  default     = {{#if mount_name}}"{{mount_name}}"{{else}}"{{environment}}"{{/if}}

  validation {
    condition     = can(regex("^[a-z0-9-]+$", var.mount_name))
    error_message = "Mount name must contain only lowercase letters, numbers, and hyphens."
  }
}

# Optional description for the mount
variable "mount_description" {
  description = "Description for the KV v2 mount"
  type        = string
  default     = {{#if mount_description}}"{{mount_description}}"{{else}}"KV v2 secret engine for {{environment}} environment"{{/if}}
}
