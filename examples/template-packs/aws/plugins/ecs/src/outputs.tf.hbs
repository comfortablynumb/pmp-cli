# Service Information
output "service_name" {
  description = "The name of the ECS service"
  value       = aws_ecs_service.plugin_service.name
}

output "service_arn" {
  description = "The ARN of the ECS service"
  value       = aws_ecs_service.plugin_service.id
}

{{#if create_cluster}}
output "cluster_name" {
  description = "The name of the ECS cluster"
  value       = aws_ecs_cluster.plugin_cluster.name
}

output "cluster_arn" {
  description = "The ARN of the ECS cluster"
  value       = aws_ecs_cluster.plugin_cluster.arn
}
{{/if}}

output "task_definition_arn" {
  description = "The ARN of the task definition"
  value       = aws_ecs_task_definition.plugin_task.arn
}

output "task_definition_family" {
  description = "The family of the task definition"
  value       = aws_ecs_task_definition.plugin_task.family
}

output "task_definition_revision" {
  description = "The revision of the task definition"
  value       = aws_ecs_task_definition.plugin_task.revision
}

# Network Information
output "security_group_id" {
  description = "The ID of the ECS tasks security group"
  value       = aws_security_group.plugin_ecs_tasks.id
}

output "vpc_id" {
  description = "The VPC ID where the service is deployed"
  value       = data.aws_vpc.selected.id
}

# IAM Role Information
output "task_execution_role_arn" {
  description = "The ARN of the task execution IAM role"
  value       = aws_iam_role.plugin_ecs_execution.arn
}

output "task_role_arn" {
  description = "The ARN of the task IAM role"
  value       = aws_iam_role.plugin_ecs_task.arn
}

# CloudWatch Logs
output "log_group_name" {
  description = "The name of the CloudWatch log group"
  value       = aws_cloudwatch_log_group.plugin_ecs.name
}

output "log_group_arn" {
  description = "The ARN of the CloudWatch log group"
  value       = aws_cloudwatch_log_group.plugin_ecs.arn
}

{{#if create_load_balancer}}
# Load Balancer Information
output "load_balancer_dns" {
  description = "The DNS name of the load balancer"
  value       = aws_lb.plugin_alb[0].dns_name
}

output "load_balancer_arn" {
  description = "The ARN of the load balancer"
  value       = aws_lb.plugin_alb[0].arn
}

output "target_group_arn" {
  description = "The ARN of the target group"
  value       = aws_lb_target_group.plugin_alb_tg[0].arn
}

output "service_url" {
  description = "The URL to access the service"
  value       = "http://${aws_lb.plugin_alb[0].dns_name}:${var.load_balancer_port}"
}
{{/if}}

# Container Information
output "container_image" {
  description = "The container image being used"
  value       = var.container_image
}

output "container_port" {
  description = "The container port being exposed"
  value       = var.container_port
}

# Quick Start Commands
output "ecs_commands" {
  description = "Useful ECS commands for managing the service"
  value = <<-EOT
    # View service details
    aws ecs describe-services --cluster {{#if create_cluster}}${aws_ecs_cluster.plugin_cluster.name}{{else}}${var.cluster_name}{{/if}} --services ${aws_ecs_service.plugin_service.name}

    # List running tasks
    aws ecs list-tasks --cluster {{#if create_cluster}}${aws_ecs_cluster.plugin_cluster.name}{{else}}${var.cluster_name}{{/if}} --service-name ${aws_ecs_service.plugin_service.name}

    # Update service to force new deployment
    aws ecs update-service --cluster {{#if create_cluster}}${aws_ecs_cluster.plugin_cluster.name}{{else}}${var.cluster_name}{{/if}} --service ${aws_ecs_service.plugin_service.name} --force-new-deployment

    # View logs (replace TASK_ID with actual task ID)
    aws logs tail ${aws_cloudwatch_log_group.plugin_ecs.name} --follow

    # Scale service
    aws ecs update-service --cluster {{#if create_cluster}}${aws_ecs_cluster.plugin_cluster.name}{{else}}${var.cluster_name}{{/if}} --service ${aws_ecs_service.plugin_service.name} --desired-count 3

    {{#if create_load_balancer}}
    # Access the service
    curl http://${aws_lb.plugin_alb[0].dns_name}:${var.load_balancer_port}
    {{/if}}
  EOT
}

# Integration Information
output "integration_info" {
  description = "ECS service integration information"
  value = {
    service_name             = aws_ecs_service.plugin_service.name
    service_arn              = aws_ecs_service.plugin_service.id
    {{#if create_cluster}}
    cluster_name             = aws_ecs_cluster.plugin_cluster.name
    cluster_arn              = aws_ecs_cluster.plugin_cluster.arn
    {{/if}}
    task_definition_arn      = aws_ecs_task_definition.plugin_task.arn
    task_execution_role_arn  = aws_iam_role.plugin_ecs_execution.arn
    task_role_arn            = aws_iam_role.plugin_ecs_task.arn
    security_group_id        = aws_security_group.plugin_ecs_tasks.id
    log_group_name           = aws_cloudwatch_log_group.plugin_ecs.name
    {{#if create_load_balancer}}
    load_balancer_dns        = aws_lb.plugin_alb[0].dns_name
    service_url              = "http://${aws_lb.plugin_alb[0].dns_name}:${var.load_balancer_port}"
    {{/if}}
    aws_region               = data.aws_region.current.name
    aws_account_id           = data.aws_caller_identity.current.account_id
  }
}

# Environments for plugin integration (used by templates)
output "environments" {
  description = "Environment variables to inject into dependent resources"
  value = {
    ECS_SERVICE_NAME = {
      value = aws_ecs_service.plugin_service.name
    }
    ECS_CLUSTER_NAME = {
      value = {{#if create_cluster}}aws_ecs_cluster.plugin_cluster.name{{else}}var.cluster_name{{/if}}
    }
    {{#if create_load_balancer}}
    SERVICE_URL = {
      value = "http://${aws_lb.plugin_alb[0].dns_name}:${var.load_balancer_port}"
    }
    LOAD_BALANCER_DNS = {
      value = aws_lb.plugin_alb[0].dns_name
    }
    {{/if}}
    LOG_GROUP_NAME = {
      value = aws_cloudwatch_log_group.plugin_ecs.name
    }
  }
}
