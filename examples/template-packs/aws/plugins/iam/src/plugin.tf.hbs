terraform {
  required_version = ">= 1.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

data "aws_caller_identity" "current" {}
data "aws_region" "current" {}

locals {
  role_name = var.project_name

  # Parse comma-separated lists
  trusted_account_ids_list = var.trusted_account_ids != "" ? split(",", var.trusted_account_ids) : []
  trusted_user_arns_list = var.trusted_user_arns != "" ? split(",", var.trusted_user_arns) : []
  s3_bucket_arns_list = var.s3_bucket_arns != "" ? split(",", var.s3_bucket_arns) : []
  dynamodb_table_arns_list = var.dynamodb_table_arns != "" ? split(",", var.dynamodb_table_arns) : []
  secrets_manager_secret_arns_list = var.secrets_manager_secret_arns != "" ? split(",", var.secrets_manager_secret_arns) : []
  log_group_arns_list = var.log_group_arns != "" ? split(",", var.log_group_arns) : []
  sqs_queue_arns_list = var.sqs_queue_arns != "" ? split(",", var.sqs_queue_arns) : []
  sns_topic_arns_list = var.sns_topic_arns != "" ? split(",", var.sns_topic_arns) : []
  kms_key_arns_list = var.kms_key_arns != "" ? split(",", var.kms_key_arns) : []

  # Determine service principal
  actual_service_principal = var.service_principal == "custom" ? var.custom_service_principal : var.service_principal

  # Tags
  common_tags = merge(
    {
      Name      = var.project_name
      ManagedBy = "pmp"
      Plugin    = "aws/iam"
    },
    var.environment != "" ? { Environment = var.environment } : {},
    var.application != "" ? { Application = var.application } : {}
  )
}

# Assume Role Policy
data "aws_iam_policy_document" "plugin_iam_assume_role" {
  {{#if (eq role_type "service")}}
  # Service role assume policy
  statement {
    effect = "Allow"

    principals {
      type        = "Service"
      identifiers = [local.actual_service_principal]
    }

    actions = ["sts:AssumeRole"]
  }

  {{else if (eq role_type "ec2")}}
  # EC2 instance role assume policy
  statement {
    effect = "Allow"

    principals {
      type        = "Service"
      identifiers = ["ec2.amazonaws.com"]
    }

    actions = ["sts:AssumeRole"]
  }

  {{else if (eq role_type "cross-account")}}
  # Cross-account assume policy
  statement {
    effect = "Allow"

    principals {
      type        = "AWS"
      identifiers = [for account_id in local.trusted_account_ids_list : "arn:aws:iam::${account_id}:root"]
    }

    actions = ["sts:AssumeRole"]

    {{#if require_mfa}}
    condition {
      test     = "Bool"
      variable = "aws:MultiFactorAuthPresent"
      values   = ["true"]
    }
    {{/if}}
  }

  {{else if (eq role_type "oidc")}}
  # OIDC federated assume policy
  statement {
    effect = "Allow"

    principals {
      type        = "Federated"
      identifiers = [var.oidc_provider_arn]
    }

    actions = ["sts:AssumeRoleWithWebIdentity"]

    condition {
      test     = "StringLike"
      variable = "token.actions.githubusercontent.com:sub"
      values   = [var.oidc_subject]
    }
  }

  {{else if (eq role_type "user")}}
  # User assume policy
  statement {
    effect = "Allow"

    principals {
      type        = "AWS"
      identifiers = local.trusted_user_arns_list
    }

    actions = ["sts:AssumeRole"]
  }
  {{/if}}
}

# IAM Role
resource "aws_iam_role" "plugin_iam" {
  name                 = local.role_name
  path                 = var.path
  assume_role_policy   = data.aws_iam_policy_document.plugin_iam_assume_role.json
  max_session_duration = var.max_session_duration

  tags = local.common_tags
}

# Attach AWS managed policies
{{#if attach_readonly_policy}}
resource "aws_iam_role_policy_attachment" "plugin_iam_readonly" {
  role       = aws_iam_role.plugin_iam.name
  policy_arn = "arn:aws:iam::aws:policy/ReadOnlyAccess"
}
{{/if}}

{{#if attach_poweruser_policy}}
resource "aws_iam_role_policy_attachment" "plugin_iam_poweruser" {
  role       = aws_iam_role.plugin_iam.name
  policy_arn = "arn:aws:iam::aws:policy/PowerUserAccess"
}
{{/if}}

# S3 Access Policy
{{#if enable_s3_access}}
data "aws_iam_policy_document" "plugin_iam_s3" {
  {{#if (eq s3_access_level "read")}}
  statement {
    effect = "Allow"
    actions = [
      "s3:GetObject",
      "s3:GetObjectVersion",
      "s3:ListBucket"
    ]
    resources = concat(
      local.s3_bucket_arns_list,
      [for arn in local.s3_bucket_arns_list : "${arn}/*"]
    )
  }

  {{else if (eq s3_access_level "readwrite")}}
  statement {
    effect = "Allow"
    actions = [
      "s3:GetObject",
      "s3:GetObjectVersion",
      "s3:PutObject",
      "s3:DeleteObject",
      "s3:ListBucket"
    ]
    resources = concat(
      local.s3_bucket_arns_list,
      [for arn in local.s3_bucket_arns_list : "${arn}/*"]
    )
  }

  {{else if (eq s3_access_level "full")}}
  statement {
    effect = "Allow"
    actions = [
      "s3:*"
    ]
    resources = concat(
      local.s3_bucket_arns_list,
      [for arn in local.s3_bucket_arns_list : "${arn}/*"]
    )
  }
  {{/if}}
}

resource "aws_iam_role_policy" "plugin_iam_s3" {
  name   = "${local.role_name}-s3-policy"
  role   = aws_iam_role.plugin_iam.name
  policy = data.aws_iam_policy_document.plugin_iam_s3.json
}
{{/if}}

# DynamoDB Access Policy
{{#if enable_dynamodb_access}}
data "aws_iam_policy_document" "plugin_iam_dynamodb" {
  {{#if (eq dynamodb_access_level "read")}}
  statement {
    effect = "Allow"
    actions = [
      "dynamodb:GetItem",
      "dynamodb:BatchGetItem",
      "dynamodb:Query",
      "dynamodb:Scan",
      "dynamodb:DescribeTable"
    ]
    resources = local.dynamodb_table_arns_list
  }

  {{else if (eq dynamodb_access_level "readwrite")}}
  statement {
    effect = "Allow"
    actions = [
      "dynamodb:GetItem",
      "dynamodb:BatchGetItem",
      "dynamodb:Query",
      "dynamodb:Scan",
      "dynamodb:PutItem",
      "dynamodb:UpdateItem",
      "dynamodb:DeleteItem",
      "dynamodb:BatchWriteItem",
      "dynamodb:DescribeTable"
    ]
    resources = local.dynamodb_table_arns_list
  }
  {{/if}}
}

resource "aws_iam_role_policy" "plugin_iam_dynamodb" {
  name   = "${local.role_name}-dynamodb-policy"
  role   = aws_iam_role.plugin_iam.name
  policy = data.aws_iam_policy_document.plugin_iam_dynamodb.json
}
{{/if}}

# Secrets Manager Access Policy
{{#if enable_secrets_manager_access}}
data "aws_iam_policy_document" "plugin_iam_secrets_manager" {
  statement {
    effect = "Allow"
    actions = [
      "secretsmanager:GetSecretValue",
      "secretsmanager:DescribeSecret"
    ]
    resources = local.secrets_manager_secret_arns_list
  }
}

resource "aws_iam_role_policy" "plugin_iam_secrets_manager" {
  name   = "${local.role_name}-secrets-manager-policy"
  role   = aws_iam_role.plugin_iam.name
  policy = data.aws_iam_policy_document.plugin_iam_secrets_manager.json
}
{{/if}}

# CloudWatch Logs Policy
{{#if enable_cloudwatch_logs}}
data "aws_iam_policy_document" "plugin_iam_cloudwatch_logs" {
  statement {
    effect = "Allow"
    actions = [
      "logs:CreateLogGroup",
      "logs:CreateLogStream",
      "logs:PutLogEvents"
    ]
    resources = length(local.log_group_arns_list) > 0 ? local.log_group_arns_list : ["arn:aws:logs:${data.aws_region.current.name}:${data.aws_caller_identity.current.account_id}:log-group:*"]
  }
}

resource "aws_iam_role_policy" "plugin_iam_cloudwatch_logs" {
  name   = "${local.role_name}-cloudwatch-logs-policy"
  role   = aws_iam_role.plugin_iam.name
  policy = data.aws_iam_policy_document.plugin_iam_cloudwatch_logs.json
}
{{/if}}

# SQS Access Policy
{{#if enable_sqs_access}}
data "aws_iam_policy_document" "plugin_iam_sqs" {
  statement {
    effect = "Allow"
    actions = [
      "sqs:SendMessage",
      "sqs:ReceiveMessage",
      "sqs:DeleteMessage",
      "sqs:GetQueueAttributes"
    ]
    resources = local.sqs_queue_arns_list
  }
}

resource "aws_iam_role_policy" "plugin_iam_sqs" {
  name   = "${local.role_name}-sqs-policy"
  role   = aws_iam_role.plugin_iam.name
  policy = data.aws_iam_policy_document.plugin_iam_sqs.json
}
{{/if}}

# SNS Access Policy
{{#if enable_sns_access}}
data "aws_iam_policy_document" "plugin_iam_sns" {
  statement {
    effect = "Allow"
    actions = [
      "sns:Publish"
    ]
    resources = local.sns_topic_arns_list
  }
}

resource "aws_iam_role_policy" "plugin_iam_sns" {
  name   = "${local.role_name}-sns-policy"
  role   = aws_iam_role.plugin_iam.name
  policy = data.aws_iam_policy_document.plugin_iam_sns.json
}
{{/if}}

# KMS Access Policy
{{#if enable_kms_access}}
data "aws_iam_policy_document" "plugin_iam_kms" {
  statement {
    effect = "Allow"
    actions = [
      "kms:Decrypt",
      "kms:Encrypt",
      "kms:GenerateDataKey",
      "kms:DescribeKey"
    ]
    resources = local.kms_key_arns_list
  }
}

resource "aws_iam_role_policy" "plugin_iam_kms" {
  name   = "${local.role_name}-kms-policy"
  role   = aws_iam_role.plugin_iam.name
  policy = data.aws_iam_policy_document.plugin_iam_kms.json
}
{{/if}}

# Custom Inline Policy
{{#if enable_custom_policy}}
resource "aws_iam_role_policy" "plugin_iam_custom" {
  name   = "${local.role_name}-custom-policy"
  role   = aws_iam_role.plugin_iam.name
  policy = var.custom_policy_json
}
{{/if}}

# Instance Profile (for EC2)
{{#if (or (eq role_type "ec2") create_instance_profile)}}
resource "aws_iam_instance_profile" "plugin_iam" {
  name = local.role_name
  role = aws_iam_role.plugin_iam.name
  path = var.path

  tags = local.common_tags
}
{{/if}}
