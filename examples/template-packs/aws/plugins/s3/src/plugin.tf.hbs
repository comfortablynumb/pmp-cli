terraform {
  required_version = ">= 1.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.0"
    }
  }
}

data "aws_caller_identity" "current" {}
data "aws_region" "current" {}

locals {
  # Create globally unique bucket name
  bucket_name = "${replace(lower(var.project_name), "_", "-")}-${data.aws_caller_identity.current.account_id}"

  # CORS configuration
  cors_allowed_origins_list = var.cors_allowed_origins != "" ? split(",", var.cors_allowed_origins) : []
  cors_allowed_methods_list = var.cors_allowed_methods != "" ? split(",", var.cors_allowed_methods) : []

  # Determine if we need KMS key
  needs_kms = var.encryption_type == "aws:kms:cmk"
}

{{#if (eq encryption_type "aws:kms:cmk")}}
# KMS key for S3 encryption (customer managed)
resource "aws_kms_key" "plugin_s3" {
  description             = "KMS key for S3 bucket: ${var.project_name}"
  deletion_window_in_days = 10
  enable_key_rotation     = true

  tags = {
    Name      = "s3-${var.project_name}"
    ManagedBy = "pmp"
    Plugin    = "aws/s3"
  }
}

resource "aws_kms_alias" "plugin_s3" {
  name          = "alias/s3-${var.project_name}"
  target_key_id = aws_kms_key.plugin_s3.key_id
}
{{/if}}

{{#if enable_access_logging}}
{{#unless log_bucket_name}}
# Create log bucket if not provided
resource "aws_s3_bucket" "plugin_s3_logs" {
  bucket        = "${local.bucket_name}-logs"
  force_destroy = var.force_destroy

  tags = {
    Name      = "${var.project_name}-logs"
    ManagedBy = "pmp"
    Plugin    = "aws/s3"
  }
}

resource "aws_s3_bucket_public_access_block" "plugin_s3_logs" {
  bucket = aws_s3_bucket.plugin_s3_logs.id

  block_public_acls       = true
  block_public_policy     = true
  ignore_public_acls      = true
  restrict_public_buckets = true
}

resource "aws_s3_bucket_server_side_encryption_configuration" "plugin_s3_logs" {
  bucket = aws_s3_bucket.plugin_s3_logs.id

  rule {
    apply_server_side_encryption_by_default {
      sse_algorithm = "AES256"
    }
  }
}
{{/unless}}
{{/if}}

# Main S3 Bucket
resource "aws_s3_bucket" "plugin_s3" {
  bucket = local.bucket_name
  force_destroy = var.force_destroy

  {{#if enable_object_lock}}
  object_lock_enabled = true
  {{/if}}

  tags = {
    Name      = var.project_name
    ManagedBy = "pmp"
    Plugin    = "aws/s3"
  }
}

# Versioning configuration
resource "aws_s3_bucket_versioning" "plugin_s3" {
  bucket = aws_s3_bucket.plugin_s3.id

  versioning_configuration {
    status = var.enable_versioning ? "Enabled" : "Suspended"
  }
}

# Server-side encryption
resource "aws_s3_bucket_server_side_encryption_configuration" "plugin_s3" {
  bucket = aws_s3_bucket.plugin_s3.id

  rule {
    apply_server_side_encryption_by_default {
      {{#if (eq encryption_type "AES256")}}
      sse_algorithm = "AES256"
      {{else if (eq encryption_type "aws:kms")}}
      sse_algorithm = "aws:kms"
      {{else if (eq encryption_type "aws:kms:cmk")}}
      sse_algorithm     = "aws:kms"
      kms_master_key_id = aws_kms_key.plugin_s3.arn
      {{/if}}
    }
    {{#if (or (eq encryption_type "aws:kms") (eq encryption_type "aws:kms:cmk"))}}
    bucket_key_enabled = var.enable_bucket_key
    {{/if}}
  }
}

# Public access block
resource "aws_s3_bucket_public_access_block" "plugin_s3" {
  bucket = aws_s3_bucket.plugin_s3.id

  block_public_acls       = var.block_public_acls
  block_public_policy     = var.block_public_policy
  ignore_public_acls      = var.ignore_public_acls
  restrict_public_buckets = var.restrict_public_buckets
}

{{#if enable_lifecycle_rules}}
# Lifecycle configuration
resource "aws_s3_bucket_lifecycle_configuration" "plugin_s3" {
  bucket = aws_s3_bucket.plugin_s3.id

  # Transition rules for current versions
  {{#if (or (gt transition_to_ia_days 0) (gt transition_to_glacier_days 0) (gt transition_to_deep_archive_days 0))}}
  rule {
    id     = "transition-current-objects"
    status = "Enabled"

    {{#if (gt transition_to_ia_days 0)}}
    transition {
      days          = var.transition_to_ia_days
      storage_class = "STANDARD_IA"
    }
    {{/if}}

    {{#if (gt transition_to_glacier_days 0)}}
    transition {
      days          = var.transition_to_glacier_days
      storage_class = "GLACIER"
    }
    {{/if}}

    {{#if (gt transition_to_deep_archive_days 0)}}
    transition {
      days          = var.transition_to_deep_archive_days
      storage_class = "DEEP_ARCHIVE"
    }
    {{/if}}
  }
  {{/if}}

  {{#if enable_versioning}}
  {{#if (gt expire_noncurrent_versions_days 0)}}
  # Expire noncurrent versions
  rule {
    id     = "expire-noncurrent-versions"
    status = "Enabled"

    noncurrent_version_expiration {
      noncurrent_days = var.expire_noncurrent_versions_days
    }
  }
  {{/if}}

  {{#if expire_delete_markers}}
  # Remove expired delete markers
  rule {
    id     = "expire-delete-markers"
    status = "Enabled"

    expiration {
      expired_object_delete_marker = true
    }
  }
  {{/if}}
  {{/if}}

  depends_on = [aws_s3_bucket_versioning.plugin_s3]
}
{{/if}}

{{#if enable_access_logging}}
# Access logging
resource "aws_s3_bucket_logging" "plugin_s3" {
  bucket = aws_s3_bucket.plugin_s3.id

  target_bucket = var.log_bucket_name != "" ? var.log_bucket_name : aws_s3_bucket.plugin_s3_logs[0].id
  target_prefix = "access-logs/"
}
{{/if}}

{{#if enable_cors}}
# CORS configuration
resource "aws_s3_bucket_cors_configuration" "plugin_s3" {
  bucket = aws_s3_bucket.plugin_s3.id

  cors_rule {
    allowed_headers = ["*"]
    allowed_methods = local.cors_allowed_methods_list
    allowed_origins = local.cors_allowed_origins_list
    expose_headers  = ["ETag"]
    max_age_seconds = var.cors_max_age_seconds
  }
}
{{/if}}

{{#if enable_intelligent_tiering}}
# Intelligent-Tiering configuration
resource "aws_s3_bucket_intelligent_tiering_configuration" "plugin_s3" {
  bucket = aws_s3_bucket.plugin_s3.id
  name   = "EntireBucket"

  tiering {
    access_tier = "ARCHIVE_ACCESS"
    days        = 90
  }

  tiering {
    access_tier = "DEEP_ARCHIVE_ACCESS"
    days        = 180
  }
}
{{/if}}

{{#if enable_acceleration}}
# Transfer acceleration
resource "aws_s3_bucket_accelerate_configuration" "plugin_s3" {
  bucket = aws_s3_bucket.plugin_s3.id
  status = "Enabled"
}
{{/if}}

{{#if enable_replication}}
# IAM role for replication
resource "aws_iam_role" "plugin_s3_replication" {
  name = "${local.bucket_name}-replication-role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Principal = {
          Service = "s3.amazonaws.com"
        }
      }
    ]
  })

  tags = {
    Name      = "${var.project_name}-replication-role"
    ManagedBy = "pmp"
    Plugin    = "aws/s3"
  }
}

resource "aws_iam_role_policy" "plugin_s3_replication" {
  role = aws_iam_role.plugin_s3_replication.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = [
          "s3:GetReplicationConfiguration",
          "s3:ListBucket"
        ]
        Effect = "Allow"
        Resource = aws_s3_bucket.plugin_s3.arn
      },
      {
        Action = [
          "s3:GetObjectVersionForReplication",
          "s3:GetObjectVersionAcl"
        ]
        Effect = "Allow"
        Resource = "${aws_s3_bucket.plugin_s3.arn}/*"
      },
      {
        Action = [
          "s3:ReplicateObject",
          "s3:ReplicateDelete"
        ]
        Effect = "Allow"
        Resource = "${var.replication_destination_bucket}/*"
      }
    ]
  })
}

# Replication configuration
resource "aws_s3_bucket_replication_configuration" "plugin_s3" {
  bucket = aws_s3_bucket.plugin_s3.id
  role   = aws_iam_role.plugin_s3_replication.arn

  rule {
    id     = "replicate-all"
    status = "Enabled"

    destination {
      bucket        = var.replication_destination_bucket
      storage_class = "STANDARD"

      {{#if (or (eq encryption_type "aws:kms") (eq encryption_type "aws:kms:cmk"))}}
      encryption_configuration {
        replica_kms_key_id = "alias/aws/s3"
      }
      {{/if}}
    }

    {{#if enable_versioning}}
    delete_marker_replication {
      status = "Enabled"
    }
    {{/if}}
  }

  depends_on = [aws_s3_bucket_versioning.plugin_s3]
}
{{/if}}
