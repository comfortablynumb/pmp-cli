# Repository Information
output "repository_name" {
  description = "The name of the repository"
  value       = github_repository.plugin_repo.name
}

output "repository_full_name" {
  description = "The full name of the repository (owner/repo)"
  value       = github_repository.plugin_repo.full_name
}

output "repository_url" {
  description = "The URL to the repository on GitHub"
  value       = github_repository.plugin_repo.html_url
}

output "ssh_clone_url" {
  description = "The SSH clone URL"
  value       = github_repository.plugin_repo.ssh_clone_url
}

output "http_clone_url" {
  description = "The HTTPS clone URL"
  value       = github_repository.plugin_repo.http_clone_url
}

# Quick Start Commands
output "quick_start" {
  description = "Quick start commands for this repository"
  value = <<-EOT
    # Clone the repository
    git clone ${github_repository.plugin_repo.ssh_clone_url}
    cd ${github_repository.plugin_repo.name}

    # Or clone via HTTPS
    git clone ${github_repository.plugin_repo.http_clone_url}

    # Open in browser
    gh repo view ${github_repository.plugin_repo.full_name} --web
  EOT
}

output "integration_info" {
  description = "Repository integration information"
  value = {
    repository_name = github_repository.plugin_repo.name
    clone_url_ssh   = github_repository.plugin_repo.ssh_clone_url
    clone_url_https = github_repository.plugin_repo.http_clone_url
    html_url        = github_repository.plugin_repo.html_url
    default_branch  = github_repository.plugin_repo.default_branch
  }
}
