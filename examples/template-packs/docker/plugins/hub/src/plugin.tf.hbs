terraform {
  required_version = ">= 1.0"

  required_providers {
    dockerhub = {
      source  = "BarnabyShearer/dockerhub"
      version = "~> 0.0.7"
    }
  }
}

# Docker Hub repository resource
resource "dockerhub_repository" "plugin_repo" {
  name        = var.repository_name
  namespace   = var.namespace
  description = var.description
}
