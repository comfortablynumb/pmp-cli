resource "kubernetes_deployment" "{{name}}" {
  metadata {
    name      = "{{name}}"
    namespace = "{{namespace}}"
  }

  spec {
    replicas = {{replicas}}

    selector {
      match_labels = {
        app = "{{name}}"
      }
    }

    template {
      metadata {
        labels = {
          app = "{{name}}"
          env = "{{environment}}"
        }
      }

      spec {
        container {
          name  = "{{name}}"
          image = "{{image}}"

          resources {
            limits = {
              cpu    = "500m"
              memory = "512Mi"
            }
            requests = {
              cpu    = "250m"
              memory = "256Mi"
            }
          }
        }
      }
    }
  }
}
