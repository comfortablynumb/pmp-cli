terraform {
  required_providers {
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.23"
    }
  }
}

provider "kubernetes" {
  config_path = "~/.kube/config"
  config_context = "minikube"
}

resource "kubernetes_deployment" "app" {
  metadata {
    name = "{{name}}"
    labels = {
      app = "{{name}}"
    }
  }

  spec {
    replicas = var.replicas

    selector {
      match_labels = {
        app = "{{name}}"
      }
    }

    template {
      metadata {
        labels = {
          app = "{{name}}"
        }
      }

      spec {
        container {
          name  = "http-echo"
          image = "hashicorp/http-echo:latest"

          args = [
            "-text=${var.text}",
            "-listen=:${var.port}"
          ]

          port {
            container_port = var.port
            protocol       = "TCP"
          }

          resources {
            requests = {
              memory = "64Mi"
              cpu    = "50m"
            }
            limits = {
              memory = "128Mi"
              cpu    = "100m"
            }
          }
        }
      }
    }
  }
}

resource "kubernetes_service" "app" {
  metadata {
    name = "{{name}}"
    labels = {
      app = "{{name}}"
    }
  }

  spec {
    type = var.service_type

    selector = {
      app = "{{name}}"
    }

    port {
      protocol    = "TCP"
      port        = var.port
      target_port = var.port
{{#if (eq service_type "NodePort")}}
      node_port   = 30080
{{/if}}
    }
  }
}
