output "deployment_name" {
  description = "Name of the Kubernetes deployment"
  value       = kubernetes_deployment.app.metadata[0].name
}

output "service_name" {
  description = "Name of the Kubernetes service"
  value       = kubernetes_service.app.metadata[0].name
}

output "service_type" {
  description = "Type of the Kubernetes service"
  value       = kubernetes_service.app.spec[0].type
}

output "service_port" {
  description = "Port exposed by the service"
  value       = kubernetes_service.app.spec[0].port[0].port
}

{{#if (eq service_type "NodePort")}}
output "node_port" {
  description = "NodePort for accessing the service"
  value       = kubernetes_service.app.spec[0].port[0].node_port
}

output "access_instructions" {
  description = "Instructions for accessing the service"
  value       = "Access the service using: minikube service {{name}}"
}
{{/if}}

output "replicas" {
  description = "Number of replicas deployed"
  value       = kubernetes_deployment.app.spec[0].replicas
}
