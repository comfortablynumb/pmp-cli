{{#if (contains features "service")}}
apiVersion: v1
kind: Service
metadata:
  name: {{name}}
  namespace: {{namespace}}
  labels:
    app: {{name}}
    environment: {{environment}}
spec:
  selector:
    app: {{name}}
  ports:
  - port: 80
    targetPort: http
    protocol: TCP
    name: http
  type: ClusterIP
{{/if}}
