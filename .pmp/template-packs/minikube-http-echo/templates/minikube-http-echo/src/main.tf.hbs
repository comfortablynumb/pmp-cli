terraform {
  required_providers {
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.23"
    }
  }
}

provider "kubernetes" {
  config_path = "~/.kube/config"
  config_context = "minikube"
}

# Read plugin metadata from environment file to discover which plugins have been added
data "local_file" "env_metadata" {
  filename = "${path.module}/.pmp.environment.yaml"
}

locals {
  # Parse the environment YAML to get the list of added plugins
  env_data = yamldecode(data.local_file.env_metadata.content)

  # Extract added plugins (may be empty if no plugins added yet)
  added_plugins = try(local.env_data.spec.plugins.added, [])

  # Collect plugin environments from all added plugin modules
  # Each plugin module has an 'environments' output with secret references
  plugin_environments = merge([
    for plugin in local.added_plugins :
      try(
        module["${plugin.template_pack_name}_${plugin.name}_${plugin.project.name}"].environments,
        {}
      )
  ]...)
}

resource "kubernetes_deployment" "app" {
  metadata {
    name = "{{name}}"
    labels = {
      app = "{{name}}"
    }
  }

  spec {
    replicas = var.replicas

    selector {
      match_labels = {
        app = "{{name}}"
      }
    }

    template {
      metadata {
        labels = {
          app = "{{name}}"
        }
      }

      spec {
        container {
          name  = "http-echo"
          image = "hashicorp/http-echo:latest"

          args = [
            "-text=${var.text}",
            "-listen=:${var.port}"
          ]

          port {
            container_port = var.port
            protocol       = "TCP"
          }

          # Inject environment variables from plugin secrets
          dynamic "env" {
            for_each = local.plugin_environments

            content {
              name = env.key

              # Use valueFrom.secretKeyRef if secret info is provided
              dynamic "value_from" {
                for_each = lookup(env.value, "secret_name", null) != null ? [1] : []

                content {
                  secret_key_ref {
                    name = env.value.secret_name
                    key  = env.value.secret_key
                  }
                }
              }

              # Use direct value if provided (fallback for when secrets aren't used)
              value = lookup(env.value, "secret_name", null) == null ? lookup(env.value, "value", "") : null
            }
          }

          resources {
            requests = {
              memory = "64Mi"
              cpu    = "50m"
            }
            limits = {
              memory = "128Mi"
              cpu    = "100m"
            }
          }
        }
      }
    }
  }
}

resource "kubernetes_service" "app" {
  metadata {
    name = "{{name}}"
    labels = {
      app = "{{name}}"
    }
  }

  spec {
    type = var.service_type

    selector = {
      app = "{{name}}"
    }

    port {
      protocol    = "TCP"
      port        = var.port
      target_port = var.port
{{#if (eq service_type "NodePort")}}
      node_port   = 30080
{{/if}}
    }
  }
}
