terraform {
  required_providers {
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.23"
    }
    helm = {
      source  = "hashicorp/helm"
      version = "~> 2.11"
    }
  }
}

provider "kubernetes" {
  config_path = "~/.kube/config"
}

provider "helm" {
  kubernetes {
    config_path = "~/.kube/config"
  }
}

{{#if create_namespace}}
resource "kubernetes_namespace" "argocd" {
  metadata {
    name = var.namespace
    labels = {
      name    = var.namespace
      managed = "opentofu"
      project = "{{name}}"
    }
  }
}
{{/if}}

resource "helm_release" "argocd" {
  name       = "argocd"
  repository = "https://argoproj.github.io/argo-helm"
  chart      = "argo-cd"
  version    = var.chart_version
  namespace  = var.namespace

{{#if create_namespace}}
  depends_on = [kubernetes_namespace.argocd]
{{/if}}

  values = [
    yamlencode({
      global = {
        domain = var.server_host != "" ? var.server_host : null
      }

      server = {
        replicas = var.server_replicas
{{#if enable_ingress}}
        ingress = {
          enabled = true
          ingressClassName = var.ingress_class
          hosts = var.server_host != "" ? [var.server_host] : []
          tls = var.server_host != "" ? [{
            secretName = "argocd-server-tls"
            hosts      = [var.server_host]
          }] : []
        }
{{/if}}
      }

      repoServer = {
        replicas = var.repo_server_replicas
      }

{{#if ha_enabled}}
      redis-ha = {
        enabled = true
      }

      controller = {
        replicas = 3
      }

      applicationSet = {
        replicas = 2
      }
{{/if}}

      configs = {
        secret = {
          argocdServerAdminPassword = var.admin_password != "" ? bcrypt(var.admin_password) : null
        }
      }
    })
  ]

  # Prevent recreation on minor changes
  lifecycle {
    ignore_changes = [
      values
    ]
  }
}
